pkgname=postmarketos-ui-i3wm
pkgver=0.1
pkgrel=0
pkgdesc="(X11) Tiling X11 WM (keyboard required)"
url="https://i3wm.org"
arch="noarch"
license="GPL3"
depends="xorg-server mesa-egl i3wm i3status dmenu xset lxdm xfce4-terminal"
makedepends=""
subpackages=""
install="$pkgname.post-install"
source="
	$install
	i3wm.conf
	lock.sh
"
options="!check"

package() {
	install -D -m644 "$srcdir"/lock.sh \
		"$pkgdir"/usr/bin/lock.sh
	install -D -m644 "$srcdir"/i3wm.conf \
		"$pkgdir"/etc/skel/.config/i3/config
}
